@model IEnumerable<mercado.Models.Categoria>
@{
    Layout = "_LayoutAdmin";
}

<h2>Categorias</h2>
<hr>

<a asp-action="NovaCategoria" asp-controller="Gestao" class="btn btn-success">Criar nova categoria</a>

<hr>

<table id="dataTableCategorias" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Nome</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var categoria in Model)
        {
            <tr>
                <td>@categoria.Id</td>
                <td>@categoria.Nome</td>
                <td>
                    <a class="btn btn-primary" href="/Gestao/EditarCategoria/@categoria.Id">Editar</a>
                    <form asp-action="Deletar" asp-controller="Categorias" style="display: inline;">
                        <input type="hidden" name="id" id="id" value="@categoria.Id">
                        <button type="submit" class="btn btn-danger">Deletar</button>
                    </form>
                </td>
            </tr>   
        }
    </tbody>
</ul>

<script type="text/javascript">
    $(document).ready(function(){
        $('#dataTableCategorias').DataTable();
    });
</script>